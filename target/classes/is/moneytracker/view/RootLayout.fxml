<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="550.0" prefWidth="717.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuCloseItem" mnemonicParsing="true" onAction="#closeMoneyTracker" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="categoryMenu" mnemonicParsing="true" onAction="#openCategoryScene" text="Loại chi tiêu" />
                  <MenuItem mnemonicParsing="true" onAction="#openConfigMoneyTracker" text="Cấu hình" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Trợ giúp">
            <items>
              <MenuItem mnemonicParsing="true" onAction="#helpMoneyTracker" text="Hướng dẫn" />
              <MenuItem mnemonicParsing="true" onAction="#aboutMoneyTracker" text="Giới thiệu" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <Pane prefHeight="32.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Separator prefHeight="11.0" prefWidth="717.0" />
            <Label fx:id="statusBottom" prefHeight="33.0" prefWidth="717.0" text="(c) Money Tracker v1.0">
               <padding>
                  <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
               </padding>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Pane>
   </bottom>
</BorderPane>
